<%- include('header') %>
    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>
    <div class="box">
        <% for(var i =0;i<items.length;++i){ %>
        <form class="item" action="/remove" method="post">
            <input type="hidden" name='item' value="<%=i%>">        
            <button type="submit" class="remove">‚ùå</button>
            <p><%=items[i]%></p>
        </form>      
        <% } %>
        <form action="/add" method="post" class="item">
            <input type="text" name="activity" id="add" placeholder = 'Add New Activity'>
            <br><br>
            <button type="submit">+</button>
        </form>
    </div>
<%- include('footer') %>
